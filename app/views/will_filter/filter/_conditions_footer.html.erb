<div class="actions">
  <%= I18n.t("operational_reports.labels.order") %>:
  <%= select_tag(:wf_order, options_for_select(wf_filter.condition_options, wf_filter.order), {:onChange=>"markDirty()"}) %>
  <%= select_tag(:wf_order_type, options_for_select(wf_filter.order_type_options, wf_filter.order_type), {:onChange=>"markDirty()"}) %>
  Per Page:
  <%= select_tag(:wf_per_page, options_for_select(wf_filter.per_page_options, wf_filter.per_page.to_s), {:onChange=>"markDirty()"}) %>
  &nbsp;&nbsp;
  <%=link_to("<span>#{I18n.t("operational_reports.buttons.submit_filter")}</span>".html_safe, '#', onclick: "wfFilter.submit()", class: "wf_grey_button wf_pcb") %>
</div>
<div>
  <%=link_to("<span><b>&plus;</b> #{I18n.t("operational_reports.buttons.add")}</span>".html_safe, '#', onclick:  "wfFilter.addCondition()", class:  "wf_grey_button wf_pcb") %>
  <%=link_to("<span>#{I18n.t("operational_reports.buttons.clear")}</span>".html_safe, '#', onclick: "wfFilter.removeAllConditions()", class: "wf_grey_button wf_pcb") %>
  &nbsp;&nbsp;
  <span id="wf_loader" class="spinner" style="display:none;">
    <%=image_tag "will_filter/spinner.gif" %> <%= I18n.t("operational_reports.labels.loading") %>
  </span>
</div>